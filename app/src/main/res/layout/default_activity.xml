<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <android.support.percent.PercentRelativeLayout
        style="@style/ARootLayout">

        <TextView
            android:id="@+id/title_name"
            style="@style/ATitle"
            android:text="@string/layout_name"
            app:layout_heightPercent="10%"
            app:layout_marginLeftPercent="20%"
            app:layout_marginTopPercent="5%"
            app:layout_widthPercent="60%"/>

        <TextView
            style="@style/AMessageWindow"
            android:text="@string/default_activity_message"
            app:layout_heightPercent="50%"
            app:layout_marginLeftPercent="10%"
            app:layout_marginTopPercent="20%"
            app:layout_widthPercent="80%"/>

        <TextView
            android:id="@+id/reply_status"
            style="@style/AReplayStatus"
            android:text="@string/reply_status"
            app:layout_heightPercent="10%"
            app:layout_marginLeftPercent="30%"
            app:layout_marginTopPercent="75%"
            app:layout_widthPercent="40%"/>

        <Button
            android:id="@+id/btn_no"
            style="@style/AButtonNo"
            android:onClick="onClickNo"
            android:text="@string/no"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="30%"/>


        <Button
            android:id="@+id/next"
            style="@style/AButtonNext"
            android:onClick="onClickNext"
            android:text="@string/string_next"
            app:layout_heightPercent="10%"
            app:layout_marginLeftPercent="30%"
            app:layout_widthPercent="40%"
            />

        <Button
            android:id="@+id/btn_yes"
            style="@style/AButtonYes"
            android:onClick="onClickYes"
            android:text="@string/yes"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="30%"/>


    </android.support.percent.PercentRelativeLayout>

</FrameLayout>