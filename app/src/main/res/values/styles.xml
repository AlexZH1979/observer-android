<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AMessageWindow">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/message_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AButtonNo">
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="AButtonNext">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="AButtonYes">
        <item name="android:onClick">onClickYes</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="ATitle">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/my_color</item>
    </style>

    <style name="ARootLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AReplayStatus">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/status_text_size</item>
    </style>

    <style name="MainMessage">
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>


    <style name="MainButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="MainButton.Reject">
        <item name="android:text">@string/reject_button_text</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="MainButton.Exit">
        <item name="android:text">@string/exit</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Button.Happy">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/holo_orange_light</item>
        <item name="android:padding">@dimen/happy_button_padding</item>
        <item name="android:layout_margin">@dimen/happy_button_margin</item>
    </style>
</resources>
