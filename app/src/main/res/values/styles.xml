<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="RootLayout">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/no_padding</item>
    </style>

    <style name="InnerLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/no_padding</item>
        <item name="android:paddingEnd">@dimen/no_padding</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="InnerView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="IconButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:contentDescription">@string/image</item>
        <item name="android:layout_margin">@dimen/icon_margin</item>
    </style>

    <style name="AppTheme.VK">
        <item name="colorPrimary">#5181B8</item>
    </style>

    <style name="InnerView.SongName">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/song_name_size</item>
    </style>

    <style name="InnerView.AuthorName">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/author_name_size</item>
    </style>

    <style name="InnerView.SongDuration">
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:textSize">@dimen/music_duration_size</item>
    </style>

    <style name="InnerLayout.SongRow">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">@dimen/song_row_bottom_margin</item>
    </style>

    <style name="InnerLayout.ShuffleAll">
        <item name="android:layout_marginTop">@dimen/layout_vertical_margin</item>
        <item name="android:layout_height">@dimen/shuffle_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="InnerLayout.Header">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="InnerLayout.MusicContainer">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
    </style>

    <style name="IconButton.Search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawableEnd">@drawable/ic_menu_search</item>
    </style>

    <style name="IconButton.Arrow">
        <item name="android:layout_width">@dimen/category_arrow_width</item>
        <item name="android:drawableEnd">@drawable/ic_toolbar_spinner_arrow</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="IconButton.Menu">
        <item name="android:layout_width">@dimen/side_menu_width</item>
        <item name="android:drawableStart">@drawable/ic_ab_menu</item>
    </style>

    <style name="InnerLayout.MusicCategory">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="InnerView.ShuffleText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/shuffle_font_size</item>
    </style>

    <style name="IconButton.ShuffleIcon">
        <item name="android:layout_width">@dimen/default_icon_width</item>
        <item name="android:drawableStart">@drawable/ic_shuffle_24dp</item>
    </style>

    <style name="BorderLine">
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginTop">120dp</item>
    </style>

    <style name="MusicContainerScroller">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/song_container_margin</item>
    </style>

</resources>
