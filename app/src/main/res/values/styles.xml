<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ObserverDefault" parent="Theme.AppCompat"></style>

    <style name="Main">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Main.Menu">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Main.Button">
        <item name="android:textSize">@dimen/default_button_text_size</item>
        <item name="android:layout_height">@dimen/default_button_height</item>
    </style>

    <style name="Main.Title">
        <!--<item name="android:background">@drawable/steel</item>-->
        <!--<item name="android:scaleType">centerCrop</item>-->
        <item name="android:layout_width">@dimen/main_title_width</item>
        <item name="android:layout_height">@dimen/main_title_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/main_title_margin_top</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textSize">@dimen/main_title_text_size</item>
    </style>
</resources>
